<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/contentView"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/danmaku_history_dialog_source_title"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2" />
        <TextView
            android:id="@+id/sourceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            tools:text="直播间（123456）"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/danmaku_history_dialog_last_modified_title"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2" />
        <TextView
            android:id="@+id/lastModifiedText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            tools:text="2020-2-20 12:20:00"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/danmaku_history_dialog_file_path_title"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2" />
        <TextView
            android:id="@+id/filePathText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            tools:text="/data/data/moe.feng.danmaqua/files/history/123.csv"/>

    </LinearLayout>

</FrameLayout>